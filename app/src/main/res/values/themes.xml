<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RunningEvents" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/sky_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="preferenceTheme">@style/PrefsTheme</item>
    </style>

    <style name="PrefsTheme" parent="PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_preferences</item>
    </style>

    <style name="Theme.NewRaceDialog" parent="Theme.MaterialComponents.DayNight.Dialog">
        <item name="colorAccent">@color/green</item>
        <item name="colorPrimary">@color/green</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">?android:colorBackground</item>
        <item name="actionMenuTextColor">?android:textColorPrimary</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/green</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="Theme.RunningEvents.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>
</resources>